<%= render 'shared/section_headers' %>

<div class="container">
	<div class="row">

		<%= render 'shared/messages', flash: flash %>

		<div class="col-sm-6 col-sm-offset-3">

			<div class="form-box">

				<h4>Sign Up</h4>
				<hr>

			  	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

			  		<%= devise_error_messages! %>

			  		<div class="form-group">
			    		<%= f.label :account_type, options={class: "sr-only", for: "exampleInputAccountType1"} %>
			    		<%= f.collection_select :account_type_id, AccountType.all, :id, :name, {prompt: 'Account Type'}, class: 'form-control' %>
			  		</div>

			  		<div class="form-group">
			    		<%= f.label :county, options={class: "sr-only", for: "exampleInputCounty1"} %>
			    		<%= f.collection_select :county_id, County.all, :id, :name, {prompt: 'Select County'}, class: 'form-control' %>
			  		</div>

			    	<div class="form-group">
			    		<%= f.label :name, options={class: "sr-only", for: "exampleInputName1"} %>
			    		<%= f.text_field :name, :autofocus => true, placeholder: "Your account name", class: "form-control"  %>
			    	</div>

			    	<div class="form-group">
			    		<%= f.label :email, options={class: "sr-only", for: "exampleInputEmail1"} %>
			    		<%= f.email_field :email, :autofocus => true, placeholder: "Your email", class: "form-control"  %>
			  		</div>

			  		<div class="form-group">
			  			<%= f.label :password, options={class: "sr-only", for: "exampleInputPassword1"} %>
			    		<%= f.password_field :password, placeholder: "Password", class: "form-control"%>
			  		</div>

			    	<div class="form-group">
			  			<%= f.label :password_confirmation, options={class: "sr-only", for: "exampleInputConfirmPassword1"} %>
			    		<%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control"%>
			  		</div>

			  		<div class="checkbox">
						<label>
    							<div>
    								<%= f.check_box :agree %> I agree to the <%= link_to 'Terms of Service', '#' %> and <%= link_to 'Privacy Policy', '#' %>
    							</div>
						</label>
			  		</div>
			    
			    	<%= f.submit "Sign up", class: "btn btn-block btn-color btn-xxl" %>

			  	<% end %>

			  	<hr>
				
				<%= render "shared/links" %>

			</div>

		</div>
	</div>
</div>