<!-- Page Tip -->
<div class="page-tip animated slideInDown">
	<div class="container">
	    <div class="row">
		  	<div class="col-sm-12">
				<p>Please sign up to access all our features. Already a member? <%= link_to 'sign in here', signin_path %>.</p>
		  	</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">

			<div class="form-box">

				<h4>Sign Up</h4>
				<hr>

			  	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

			  		<%= devise_error_messages! %>

			    	<div class="form-group">
			    		<%= f.label :name, options={class: "sr-only", for: "exampleInputName1"} %>
			    		<%= f.text_field :name, :autofocus => true, placeholder: "Enter name", class: "form-control"  %>
			    	</div>

			    	<div class="form-group">
			    		<%= f.label :contact_person, options={class: "sr-only", for: "exampleInputName1"} %>
			    		<%= f.text_field :contact_person, :autofocus => true, placeholder: "Contact Person", class: "form-control"  %>
			    	</div>

			    	<div class="form-group">
			    		<%= f.label :email, options={class: "sr-only", for: "exampleInputEmail1"} %>
			    		<%= f.email_field :email, :autofocus => true, placeholder: "Enter email", class: "form-control"  %>
			  		</div>

			  		<div class="form-group">
			    		<%= f.label :county, options={class: "sr-only", for: "exampleInputCounty1"} %>
			    		<%= f.collection_select :county_id, County.all, :id, :name, {prompt: 'Select County'}, class: 'form-control' %>
			  		</div>

			  		<div class="form-group">
			  			<%= f.label :password, options={class: "sr-only", for: "exampleInputPassword1"} %>
			    		<%= f.password_field :password, placeholder: "Password", class: "form-control"%>
			  		</div>

			    	<div class="form-group">
			  			<%= f.label :password_confirmation, options={class: "sr-only", for: "exampleInputConfirmPassword1"} %>
			    		<%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control"%>
			  		</div>

			  		<div class="checkbox">
						<label>
    							<div>
    								<%= f.check_box :remember_me %> I agree to the <%= link_to 'Terms of Service', '#' %> and <%= link_to 'Privacy Policy', '#' %>
    							</div>
						</label>
			  		</div>
			    
			    	<%= f.submit "Sign up", class: "btn btn-block btn-color btn-xxl" %>

			  	<% end %>

			  	<hr>
				
				<%= render "devise/shared/links" %>

			</div>

		</div>
	</div>
</div>